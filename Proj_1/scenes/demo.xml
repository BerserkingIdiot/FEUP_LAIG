<lxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="5" y="5" z="5" />
            <to x="1" y="0" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/beach_club.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="1.0" g="1.0" b="1.0" a="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="0.0" g="0.0" b="0.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="darkGrey" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.3" g="0.3" b="0.3" a="1.0" />
            <diffuse r="0.3" g="0.3" b="0.3" a="1.0" />
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
        </material>
        <material id="cupRed" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.6" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.7" g="0.0" b="0.0" a="1.0" />
            <specular r="0.9" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="triangle">
            <triangle x1="0" y1="3" z1="1" 
                x2="0" y2="0" z2="1"
                x3="3" y3="3" z3="1" />
        </primitive>
        <primitive id="sphere">
            <sphere radius="2" slices="40" stacks="40" />
        </primitive>
        <primitive id="mediumCylinder">
            <cylinder base="0.2" top="0.2" height="2" slices="20" stacks="20" />
        </primitive>
    </primitives>

    <components>
        <component id="demoRoot">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture" length_s="1" length_t="1"/>
            <children>
                <componentref id="person" />
            </children>
        </component>
        <component id="person">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture" length_s="1" length_t="1"/>
            <children>
                <componentref id="head" />
                <componentref id="arms" />
                <!-- <componentref id="legs" />
                <componentref id="body" /> -->
            </children>
        </component>
        <component id="head">
            <transformation>
                <translate x="0" y="6" z="0"/>
                <scale x="0.3" y="0.3" z="0.3"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="sphere"/>
            </children>
        </component>
        <component id="arms">
            <transformation>
                <translate x="0" y="4.5" z="0"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <componentref id="leftArm"/>
                <componentref id="rightArm"/>
            </children>
        </component>
        <component id="leftArm">
            <transformation>
                <rotate axis="z" angle="40"/>
                <rotate axis="x" angle="-90"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="mediumCylinder"/>
            </children>
        </component>
        <component id="rightArm">
            <transformation>
                <rotate axis="z" angle="-40"/>
                <rotate axis="x" angle="-90"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="mediumCylinder"/>
            </children>
        </component>
        <!-- <component id="legs">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <componentref id="leftLeg"/>
                <componentref id="rightLeg"/>
            </children>
        </component>
        <component id="body">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id=""/>
            </children>
        </component> -->
    </components>
</lxs>