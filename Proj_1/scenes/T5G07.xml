<lxs>
    <scene root="scene" axis_length="5"/>

    <views default="startingCamera">
        <perspective id="startingCamera" near="0.1" far="50" angle="40">
            <from x="20" y="15" z="20" />
            <to x="0" y="0" z="0" />
        </perspective>
        <ortho id="orthoCamera" near="0.1" far="500" left="50" right="50" top="50" bottom="50" >
            <from x="30" y="30" z="30" />
            <to x="0" y="0" z="0" />
            <up x="0" y="1" z="0" />
        </ortho>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
        <transformation id="buoyTransf">
            <translate x="0.2" y="7" z="5" />
            <rotate axis="y" angle="90" />
            <scale x="0.5" y="0.5" z="0.5" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="bigSquare">
            <rectangle x1="0" y1="0" x2="10" y2="10" />
        </primitive>
        <primitive id="demoCylinder">
            <cylinder base="2" top="1" height="3" slices="12" stacks="12" />
        </primitive>
        <primitive id="demoTriangle">
            <triangle x1="0" y1="0" z1="0"
                      x2="1" y2="3" z2="-2"
                      x3="2" y3="0" z3="0" />
        </primitive>
        <primitive id="demoSphere">
            <sphere radius="2" slices="40" stacks="40" />
        </primitive>
        <primitive id="buoy">
            <torus inner="1" outer="2" slices="40" loops="40" />
        </primitive>
        <primitive id="thinCylinder">
            <cylinder base="0.1" top="0.1" height="2" slices="10" stacks="10" />
        </primitive>
    </primitives>

    <components>
        <component id="scene">
            <transformation>
                <!-- <translate x="0" y="0" z="1" />
                <scale x="2" y="1" z="1" /> -->
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="roomBox" />
                <componentref id="lifeguardBuoy" />
                <componentref id="mirrorBall" />
            </children>
        </component>
        <component id="roomBox">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="wallXY" />
                <componentref id="wallYZ" />
                <componentref id="floor" />
            </children>
        </component>
        <component id="floor">
            <transformation>
                <translate x="0" y="0" z="10" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="bigSquare" />
            </children>
        </component>
        <component id="wallXY">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="bigSquare" />
            </children>
        </component>
        <component id="wallYZ">
            <transformation>
                <translate x="0" y="0" z="10" />
                <rotate axis="y" angle="90" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="bigSquare" />
            </children>
        </component>
        <component id="lifeguardBuoy">
            <transformation>
                <transformationref id="buoyTransf" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="buoy" />
            </children>
        </component>
        <component id="mirrorBall">
            <transformation>
                <translate x="5" y="8" z="5" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="mirrorCable" />
                <componentref id="mirrorSphere" />
            </children>
        </component>
        <component id="mirrorCable">
            <transformation>
                <translate x="5" y="8" z="5" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                
            </children>
        </component>
        <component id="mirrorSphere">
            <transformation>
                <translate x="5" y="8" z="5" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                
            </children>
        </component>
        
    </components>
</lxs>