<lxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="10" y="10" z="10" />
            <to x="1" y="0" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/beach_club.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="1.0" g="1.0" b="1.0" a="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="0.0" g="0.0" b="0.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="darkGrey" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.3" g="0.3" b="0.3" a="1.0" />
            <diffuse r="0.3" g="0.3" b="0.3" a="1.0" />
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
        </material>
        <material id="cupRed" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.6" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.7" g="0.0" b="0.0" a="1.0" />
            <specular r="0.9" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="1"/>
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <animations>
        <animation id="demoAnim" >
            <keyframe instant="5">
                <translate x="0" y="5" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="3" y="3" z="3" />
            </keyframe>
            <keyframe instant="10">
                <translate x="0" y="0" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="1" y="1" z="1" />
            </keyframe>
        </animation>
        <animation id="aroundSphere" >
            <keyframe instant="5">
                <translate x="0" y="0" z="0" />
                <rotate angle_x="0" angle_y="360" angle_z="0" />
                <scale x="1" y="1" z="1" />
            </keyframe>
        </animation>
    </animations>

    <primitives>
        <primitive id="triangle">
            <triangle x1="0" y1="3" z1="1" 
                x2="0" y2="0" z2="1"
                x3="3" y3="3" z3="1" />
        </primitive>
        <primitive id="sphere">
            <sphere radius="2" slices="40" stacks="40" />
        </primitive>
        <primitive id="mediumCylinder">
            <cylinder base="0.2" top="0.2" height="2" slices="20" stacks="20" />
        </primitive>
        <primitive id="bigCylinder">
            <cylinder base="0.5" top="0.5" height="3.5" slices="20" stacks="20" />
        </primitive>
        <primitive id="plane">
            <plane npartsU="10" npartsV="10" />
        </primitive>
        <primitive id="patch">
            <patch npointsU="3" npointsV="2" npartsU="20" npartsV="20" >
                <controlpoint xx="-1.5" yy="-1.5" zz="0" />
                <controlpoint xx="-1.5" yy="1.5" zz="0" />
                <controlpoint xx="0" yy="-1.5" zz="3" />
                <controlpoint xx="0" yy="1.5" zz="3" />
                <controlpoint xx="1.5" yy="-1.5" zz="0" />
                <controlpoint xx="1.5" yy="1.5" zz="0" />
            </patch>
        </primitive>
         <primitive id="cylinder2">
            <cylinder2 base="3" top="5" height="5" slices="20" stacks="10" />
        </primitive>
    </primitives>

    <components>
        <component id="demoRoot">
            <transformation>
            </transformation>
            <!-- <animationref id="demoAnim" /> -->
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture" length_s="1" length_t="1"/>
            <children>
                <componentref id="patch" /> 
                <componentref id="plane" />
                <primitiveref id="cylinder2" />
                <!-- <primitiveref id="sphere" /> -->
            </children>
        </component>
        <component id="patch">
            <transformation>
                <translate x="0" y="0" z="1"/>
            </transformation>
            <animationref id="aroundSphere" />
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="patch" />
            </children>
        </component>
        <component id="plane">
            <transformation>
                <translate x="0" y="-2" z="0"/>
                <scale x="10" y="1" z="10"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="plane" />
            </children>
        </component>
    </components>
</lxs>